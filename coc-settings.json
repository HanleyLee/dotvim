{
    "coc.source.word.enable": true,
    "coc.source.word.filetypes": ["markdown"],
    "coc.source.file.ignoreHidden": false,
    "coc.source.file.ignorePatterns": [],
    "coc.source.emoji.filetypes": ["markdown"],
    "coc.source.emoji.shortcut": "Emoji",
    "snippets.ultisnips.directories": [
        "Ultisnips",
        "~/.local/snippets"
    ],
    "markdownlint.onOpen": true,
    "markdownlint.onSave": true,
    "markdownlint.onChange": true,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh", "zsh"],
            "ignoredRootPaths": ["~"]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": [
                "lua"
            ]
        },
        "efm": {
            "command": "efm-langserver",
            "args": [],
            "filetypes": [
                "vim",
                "eruby"
                /* "markdown" */
            ]
        },
        "sql": {
            "command": "sql-language-server",
            "args": [
                "up",
                "--method",
                "stdio"
            ],
            "filetypes": [
                "sql",
                "mysql"
            ]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "clojure-lsp": {
            "command": "bash",
            "args": [
                "-c",
                "clojure-lsp"
            ],
            "filetypes": [
                "clojure"
            ],
            "rootPatterns": [
                "project.clj"
            ],
            "additionalSchemes": [
                "jar",
                "zipfile"
            ],
            "trace.server": "verbose",
            "initializationOptions": {}
        }
    }
}
