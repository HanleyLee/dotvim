{
    "suggest.languageSourcePriority": 90,
    "suggest.removeDuplicateItems": true,
    "suggest.autoTrigger": "always",
    "suggest.detailField": "preview",
    "suggest.floatEnable": true,
    "suggest.snippetsSupport": true,

    "suggest.noselect": false,
    "suggest.enablePreselect": true,
    // "suggest.noselect": true,
    // "suggest.enablePreselect": false,

    // source-file
    "coc.source.file.priority": 100,
    "coc.source.file.ignoreHidden": false,
    "coc.source.file.ignorePatterns": [],
    "coc.source.file.shortcut": "FILE",

    // sources-10k words
    "coc.source.word.priority":20,
    "coc.source.word.enable": true,
    "coc.source.word.filetypes": ["markdown"],
    "coc.source.word.shortcut": "10K",

    // source-emoji
    "coc.source.emoji.priority": 10,
    "coc.source.emoji.filetypes": ["markdown"],
    "coc.source.emoji.shortcut": "EMOJI",

    "coc.source.around.priority": 50,
    "coc.source.around.firstMatch": false,
    "coc.source.around.shortcut": "AR",

    "coc.source.buffer.priority": 30,
    "coc.source.buffer.firstMatch": false,
    "coc.source.buffer.shortcut": "BF",

    "coc.source.dictionary.priority": 20,
    "coc.source.dictionary.shortcut": "DIC",

    "coc.source.tag.priority": 40,
    "coc.source.tag.shortcut": "TAG",

    "coc.source.syntax.priority": 60,
    "coc.source.syntax.shortcut": "SYN",

    "coc.source.omni.priority":20,
    "coc.source.omni.shortcut": "OMNI",

    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.rootPatterns": [
        ".root",
        ".svn",
        ".git",
        ".hg",
        ".project",
        "Makefile",
        "CMakeLists.txt"
    ],

    // coc-tabnine
    "tabnine.priority": 70,
    "tabnine.shortcut": "TN",

    // coc-snippets
    "snippets.priority": 80,
    "snippets.shortcut": "SNIP",
    "snippets.ultisnips.directories": [
        "Ultisnips",
        "~/.local/share/snippets"
    ],

    "json.enable": true,
    "json.schemaDownload.enable": true,
    "json.format.enable": true,
    "json.maxItemsComputed": 5000,

    // coc-yank
    "yank.priority": 20,
    "yank.highlight.enable": true,
    "yank.highlight.duration": 200,
    "yank.limit": 20,
    "yank.list.maxsize": 100,
    "yank.enableCompletion": true,

    "markdownlint.onOpen": true,
    "markdownlint.onSave": true,
    "markdownlint.onChange": true,

    // diagnostic
    "diagnostic.signPriority": 100,
    "diagnostic.infoSign":            "ღ",
    "diagnostic.hintSign":            "ஐ",
    "diagnostic.warningSign":         "⚠",
    "diagnostic.errorSign":           ">>",
    "diagnostic.enable":              true,
    "diagnostic.highlightOffset":     9999999,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.separateRelatedInformationAsDiagnostics": true,
    "diagnostic-languageserver.filetypes": {
        "vim": "vint",
        "markdown": ["write-good", "markdownlint"],
        "sh":       "shellcheck",
        "zsh":       "shellcheck"
    },

    // coc-gitignore
    "gitignore.enable": true,
    "gitignore.templates.patch": {},
    "gitignore.templates.replace": {},

    // coc-highlight
    "highlight.disableLanguages": [],

    // coc-vimlsp
    "vimlsp.debug": false,
    "vimlsp.diagnostic.enable": true,
    "vimlsp.suggest.fromVimruntime": true,
    "vimlsp.suggest.fromRuntimepath": false,
    "vimlsp.indexes.gap": 100,
    "vimlsp.indexes.count": 1,
    "vimlsp.indexes.runtimepath": true,
    "vimlsp.indexes.projectRootPatterns": [
        ".git",
        "autoload",
        "plugin"
    ],
    "vimlsp.filetypes": [
        "vim"
    ],

    // coc-pyright
    "pyright.enable": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.stubPath": "typings",
    "python.analysis.typeshedPaths": [],
    "python.analysis.diagnosticSeverityOverrides": {},
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.useLibraryCodeForTypes": true,
    "python.pythonPath": "python",
    "python.venvPath": "",
    "python.formatting.provider": "autopep8",
    "python.formatting.blackPath": "black",
    "python.formatting.blackArgs": [],
    "python.formatting.blackdPath": "blackd",
    "python.formatting.blackdHTTPURL": "",
    "python.formatting.blackdHTTPHeaders": {},
    "python.formatting.yapfPath": "yapf",
    "python.formatting.yapfArgs": [],
    "python.formatting.autopep8Args": [],
    "python.formatting.autopep8Path": "autopep8",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.banditEnabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.pytypeEnabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pylamaEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.sortImports.path": "",
    "python.sortImports.args": [],
    "pyright.disableDiagnostics": false,
    "pyright.completion.snippetSupport": true,
    "pyright.organizeimports.provider": "pyright",


    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh", "zsh"],
            "ignoredRootPaths": ["~"]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": [
                "lua"
            ]
        },
        "efm": {
            "command": "efm-langserver",
            "args": [],
            "filetypes": [
                "eruby"
                /* "vim", */
                /* "markdown" */
            ]
        },
        "sql": {
            "command": "sql-language-server",
            "args": [
                "up",
                "--method",
                "stdio"
            ],
            "filetypes": [
                "sql",
                "mysql"
            ]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "clojure-lsp": {
            "command": "bash",
            "args": [
                "-c",
                "clojure-lsp"
            ],
            "filetypes": [
                "clojure"
            ],
            "rootPatterns": [
                "project.clj"
            ],
            "additionalSchemes": [
                "jar",
                "zipfile"
            ],
            "trace.server": "verbose",
            "initializationOptions": {}
        }
    }
}
